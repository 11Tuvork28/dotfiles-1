#!/bin/sh
COMMAND="buku -o %"
if [[ $1 == '-e' ]]; then
    COMMAND="buku -w %"
fi
buku -f 5 -p | awk -F'\t' -v OFS='\t' '{
    split($3, tags, ",")
    joined = sep = ""
    for (i = 1; i in tags; i++) {
        joined = joined sep "[" tags[i] "]"
        sep = " "
    }
    if ($1 != "waiting for input") {
        printf "%-5s %-40s %s\n", $1, $2, joined
    }
}' | dmenu -l 20 | cut -d ' ' -f 1 | xargs -I % $COMMAND
